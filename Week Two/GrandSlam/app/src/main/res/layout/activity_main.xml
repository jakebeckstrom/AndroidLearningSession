<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.grandslam.MainActivity">

    <ImageView
        android:id="@+id/baseball_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:src="@drawable/baseball_diamond"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_below="@id/baseball_diamond"
        android:layout_alignParentLeft="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-88dp"
        android:paddingLeft="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="24sp" />
        
        <TextView
            android:id="@+id/scoreA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="48sp"
            android:gravity="center"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 Point"
            android:background="#7ed493"
            android:onClick="addOnePointA"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+2 Point"
            android:background="#7ed493"
            android:onClick="addTwoPointsA"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+3 Point"
            android:background="#7ed493"
            android:onClick="addThreePointsA"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Grand Slam"
            android:background="#7ed493"
            android:onClick="addFourPointsA"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/baseball_diamond"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-88dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/scoreB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="48sp"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 Point"
            android:background="#7ed493"
            android:onClick="addOnePointB"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 Point"
            android:layout_marginTop="8dp"
            android:background="#7ed493"
            android:onClick="addTwoPointsB"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 Point"
            android:layout_marginTop="8dp"
            android:background="#7ed493"
            android:onClick="addThreePointsB"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grand Slam"
            android:layout_marginTop="8dp"
            android:background="#7ed493"
            android:onClick="addFourPointsB"/>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Reset"
        android:layout_marginTop="8dp"
        android:background="#7ed493"
        android:onClick="reset"/>
</RelativeLayout>
